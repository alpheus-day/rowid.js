        "npm-run-all2": "^7.0.2",
        "tsup": "^8.3.6",
        "typedoc": "~0.27.7",
        "typedoc-plugin-markdown": "^4.4.2",
        "typescript": "^5.7.3"
    },
    "engines": {
        "node": ">=18"
